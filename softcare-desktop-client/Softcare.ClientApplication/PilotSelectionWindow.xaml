<Window x:Class="EHealth.ClientApplication.PilotSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALADDIN Pilot Selection" Width="300" Height="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" FontSize="48" Click="BSA_Click" Margin="10">
                BSA
            </Button>
            <Button Grid.Row="1" FontSize="48" Click="DAFNI_Click" Margin="10">
                DAFNI
            </Button>
            <Button Grid.Row="2" FontSize="48" Click="NHNN_Click" Margin="10">
                NHNN
            </Button>
        </Grid>
    </Grid>
</Window>
